<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>NiCris Dashboard - @ViewBag.Title</title>

        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        @* @Styles.Render("~/Content/css") *@
        @Styles.Render("~/Content/Bootstrap")
        @Scripts.Render("~/bundles/modernizr")

        @*TEMP - just to make SignalR happy*@
        <script src="~/Scripts/jquery-1.8.0.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.signalR-0.5.3.min.js" type="text/javascript"></script>
        <script src="/signalr/hubs" type="text/javascript"></script>
       
       <style>
          body { padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */ }
          .aligntobottom { bottom:0; position:absolute; }
       </style>
    </head>

    <body>

    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" style="padding:4px 5px 0px 0px" href="@Url.Action("Index", "Home")">
                    <span><img src="@Url.Content("~/Content/logo.png")" alt="logo" border="0"/></span>
                </a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("BizMsg", "Index", "BizMsgMonitor")</li>
                        <li>@Html.ActionLink("Chat", "Index", "Chat")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
                <ul class="nav pull-right" style="padding-top:10px">  
                    <li>@User.Identity.Name</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @if (IsSectionDefined("featured"))
        {
            <div class="hero-unit">
                @RenderSection("featured", required: false)
            </div>
        }

        @RenderBody()
    </div>

    @*<footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - NiCris Dashboard®</p>
            </div>
        </div>
    </footer>*@

     @*@Scripts.Render("~/bundles/jquery")*@
     @Scripts.Render("~/Scripts/Bootstrap")
     @RenderSection("scripts", required: false)

    </body>
</html>
